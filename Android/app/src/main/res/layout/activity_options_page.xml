<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".users.OptionsPage">

	<Button
		android:id="@+id/btnEditDetails"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="38dp"
		android:text="Edit My Details"
		app:layout_constraintBottom_toTopOf="@+id/btnViewDoc"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<Button
		android:id="@+id/btnViewDoc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="17dp"
		android:layout_marginBottom="34dp"
		android:text="View Doctors"
		app:layout_constraintBottom_toTopOf="@+id/btnViewPres"
		app:layout_constraintStart_toStartOf="@+id/btnViewPres" />

	<Button
		android:id="@+id/btnViewPres"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="23dp"
		android:layout_marginBottom="37dp"
		android:text="View Prescriptions"
		app:layout_constraintBottom_toTopOf="@+id/btnViewInsur"
		app:layout_constraintEnd_toEndOf="@+id/btnViewInsur" />

	<Button
		android:id="@+id/btnViewInsur"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="318dp"
		android:text="See Insurance Companies"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<Button
		android:id="@+id/btnViewPharma"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="46dp"
		android:text="View Pharmacies"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/btnViewInsur" />

</androidx.constraintlayout.widget.ConstraintLayout>
